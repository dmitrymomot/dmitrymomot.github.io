---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Get home page content from markdown
const homePage = await getEntry('pages', 'home');
const { 
  title, 
  subtitle, 
  tagline, 
  description,
  status,
  problemsSolve,
  services,
  howIWork,
  experience,
  about,
  contact,
  social,
  footer
} = homePage.data;

// Map status color to Tailwind classes
const statusColorMap = {
  green: 'bg-green-500',
  yellow: 'bg-yellow-500',
  red: 'bg-red-500',
  gray: 'bg-gray-500'
};
---

<Layout title={`${title} - ${subtitle}`} description={description}>
  <!-- SECTION 1: Hero/Opening - Enhanced -->
  <section class="relative overflow-hidden bg-gradient-to-br from-black via-zinc-900 to-black">
    <!-- Animated background mesh -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-[#9ECBFF] via-[#79B8FF] to-transparent opacity-10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-[#79B8FF] via-[#9ECBFF] to-transparent opacity-10 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px]">
        <div class="absolute inset-0 border border-zinc-700/20 rounded-full"></div>
        <div class="absolute inset-12 border border-zinc-700/15 rounded-full"></div>
        <div class="absolute inset-24 border border-zinc-700/10 rounded-full"></div>
      </div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" xmlns="http://www.w3.org/2000/svg"%3E%3Cdefs%3E%3Cpattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse"%3E%3Cpath d="M 60 0 L 0 0 0 60" fill="none" stroke="gray" stroke-width="0.5" opacity="0.1"/%3E%3C/pattern%3E%3C/defs%3E%3Crect width="100%25" height="100%25" fill="url(%23grid)" /%3E%3C/svg%3E')] opacity-30"></div>
    </div>
    
    <div class="container mx-auto px-4 py-24 md:py-36 max-w-5xl relative">
      <div class="text-center">
        <!-- Small accent text - Configurable Status -->
        {status && status.available !== undefined && (
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-zinc-800/50 backdrop-blur-sm border border-zinc-700 rounded-full mb-6">
            <div class={`w-2 h-2 ${statusColorMap[status.color] || 'bg-gray-500'} rounded-full`}></div>
            <span class="text-sm text-zinc-400">{status.text}</span>
          </div>
        )}
        
        <h1 class="text-5xl md:text-7xl font-bold mb-4 leading-tight">
          {title}
        </h1>
        <p class="text-2xl md:text-3xl bg-gradient-to-r from-[#9ECBFF] to-[#79B8FF] bg-clip-text text-transparent font-medium mb-6">
          {subtitle}
        </p>
        <p class="text-xl md:text-2xl text-zinc-300 mb-8 max-w-3xl mx-auto leading-relaxed">
          {tagline}
        </p>
        <p class="text-lg text-zinc-400 mb-12 max-w-2xl mx-auto">
          {description}
        </p>
        
        <!-- CTA Buttons with better styling -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`mailto:${contact.email}?subject=Consultation Request`}
            class="group inline-flex items-center gap-2 px-8 py-4 bg-[#9ECBFF]/20 backdrop-blur-sm border border-[#9ECBFF]/50 text-[#9ECBFF] rounded-lg hover:bg-[#9ECBFF]/30 hover:border-[#9ECBFF] hover:scale-105 transition-all duration-200 ease-in-out font-semibold text-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Schedule a Consultation
          </a>
          <a 
            href={social.linkedin}
            target="_blank"
            class="group inline-flex items-center gap-2 px-8 py-4 bg-zinc-800/80 backdrop-blur-sm border border-zinc-700 text-zinc-100 rounded-lg hover:bg-zinc-700/80 hover:border-zinc-600 hover:scale-105 transition-all duration-200 ease-in-out font-semibold text-lg"
          >
            View LinkedIn Profile
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="mt-16 flex flex-wrap justify-center gap-8 text-zinc-500 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>15+ Years Experience</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Global Clients</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <span>Trusted Advisor</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 2: Problems I Solve -->
  <section class="py-20 bg-zinc-900/50">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
          {problemsSolve.title}
        </h2>
        <p class="text-xl text-zinc-300">
          {problemsSolve.intro}
        </p>
      </div>
      
      <div class="relative bg-zinc-800/50 rounded-2xl p-8 md:p-10 border border-zinc-700 overflow-hidden">
        <!-- Decorative element -->
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-[#9ECBFF] via-[#79B8FF] to-transparent opacity-20 rounded-full blur-2xl"></div>
        
        <div class="grid md:grid-cols-2 gap-6 mb-8 relative">
          {problemsSolve.items.map((item, index) => (
            <div class="flex items-start group">
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#9ECBFF] to-[#79B8FF] flex items-center justify-center mt-0.5 mr-3 flex-shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-zinc-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <p class="text-lg text-zinc-300">{item}</p>
            </div>
          ))}
        </div>
        <p class="text-lg text-zinc-300 text-center font-medium bg-zinc-900/50 rounded-lg p-4">
          {problemsSolve.outro}
        </p>
      </div>
    </div>
  </section>

  <!-- SECTION 3: My Services -->
  <section class="py-20 relative">
    <div class="container mx-auto px-4 max-w-5xl">
      <h2 class="text-3xl md:text-5xl font-bold mb-12 text-center bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
        {services.title}
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        {services.categories.map((category, index) => {
          const patterns = ['geometric', 'wave', 'dots'];
          const pattern = patterns[index % patterns.length];
          
          return (
            <div class="group relative">
              <!-- Date-like badge -->
              <div class="absolute -top-3 left-6 px-4 py-1 bg-zinc-100 text-zinc-900 rounded-full text-xs font-semibold z-10">
                {index === 0 ? 'Strategy' : index === 1 ? 'Leadership' : 'Advisory'}
              </div>
              
              <div class="relative bg-zinc-800/50 rounded-2xl p-6 hover:shadow-xl transition-all duration-300 hover:scale-[1.02] border border-zinc-700 overflow-hidden h-full">
                <!-- Decorative Elements - Absolutely positioned at top-right -->
                <div class="absolute top-6 right-6 pointer-events-none opacity-10 z-0">
                  {pattern === 'geometric' && (
                    <div class="w-16 h-16">
                      <div class="absolute inset-0 border-2 border-[#9ECBFF] rounded-lg animate-spin" style="animation-duration: 8s"></div>
                      <div class="absolute inset-2 border border-[#79B8FF] rotate-45 animate-spin" style="animation-duration: 12s; animation-direction: reverse"></div>
                    </div>
                  )}
                  
                  {pattern === 'wave' && (
                    <svg class="w-20 h-20" viewBox="0 0 96 96">
                      <path d="M0,48 Q24,36 48,48 T96,48" stroke="#9ECBFF" fill="none" stroke-width="2" opacity="0.6" />
                      <path d="M0,60 Q24,48 48,60 T96,60" stroke="#79B8FF" fill="none" stroke-width="1.5" opacity="0.4" />
                    </svg>
                  )}
                  
                  {pattern === 'dots' && (
                    <div class="grid grid-cols-3 gap-1.5">
                      {[...Array(9)].map((_, i) => (
                        <div 
                          key={i}
                          class={`w-2 h-2 rounded-full ${i % 3 === 0 ? 'bg-[#9ECBFF]' : 'bg-[#79B8FF]'}`}
                        ></div>
                      ))}
                    </div>
                  )}
                </div>
                
                <!-- Content with relative positioning to stay above decorative elements -->
                <div class="relative z-10">
                  <h3 class="text-xl font-bold mb-6 text-zinc-100">
                    {category.title}
                  </h3>
                  <ul class="space-y-3 list-none">
                    {category.items.map((item) => (
                      <li class="flex items-start text-zinc-300 text-sm">
                        <span class="text-[#9ECBFF] mr-2 flex-shrink-0">â€¢</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                <!-- Hover accent line -->
                <div class="absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b from-[#9ECBFF] via-[#79B8FF] to-transparent opacity-0 group-hover:opacity-40 transition-opacity duration-300"></div>
              </div>
            </div>
          )
        })}
      </div>
    </div>
  </section>

  <!-- SECTION 4: How I Work - Redesigned Icons -->
  <section class="py-20 bg-zinc-900/50">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
          {howIWork.title}
        </h2>
        <p class="text-xl text-zinc-400">
          {howIWork.subtitle}
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {howIWork.engagements.map((engagement, index) => (
          <div class="text-center group">
            <!-- Redesigned number indicator -->
            <div class="relative w-16 h-16 mx-auto mb-6">
              <div class="absolute inset-0 bg-gradient-to-br from-zinc-700 to-zinc-800 rounded-xl rotate-6 group-hover:rotate-12 transition-transform"></div>
              <div class="absolute inset-0 bg-gradient-to-br from-zinc-100 to-zinc-300 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="text-2xl font-bold text-zinc-900">{index + 1}</span>
              </div>
            </div>
            <h3 class="text-xl font-bold mb-3 text-zinc-100">
              {engagement.title}
            </h3>
            <p class="text-zinc-400">
              {engagement.description}
            </p>
          </div>
        ))}
      </div>

      <div class="relative bg-zinc-800/50 rounded-2xl p-8 border border-zinc-700 overflow-hidden">
        <!-- Decorative gradient orb -->
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-gradient-to-tr from-[#9ECBFF] via-[#79B8FF] to-transparent opacity-20 rounded-full blur-2xl"></div>
        
        <h3 class="text-xl font-bold mb-4 text-zinc-100">
          {howIWork.principles.title}
        </h3>
        <p class="text-zinc-300 mb-6">{howIWork.principles.intro}</p>
        <div class="grid md:grid-cols-2 gap-4">
          {howIWork.principles.items.map((item) => (
            <div class="flex items-start group">
              <svg class="w-5 h-5 text-[#9ECBFF] mt-0.5 mr-3 flex-shrink-0 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-zinc-300">{item}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 5: Experience & Expertise - Redesigned Stats -->
  <section class="py-20 relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px]">
        <div class="absolute inset-0 border border-zinc-800 rounded-full opacity-20"></div>
        <div class="absolute inset-12 border border-zinc-800 rounded-full opacity-15"></div>
        <div class="absolute inset-24 border border-zinc-800 rounded-full opacity-10"></div>
      </div>
    </div>
    
    <div class="container mx-auto px-4 max-w-5xl relative">
      <h2 class="text-3xl md:text-5xl font-bold mb-12 text-center bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
        {experience.title}
      </h2>
      
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="relative bg-zinc-800/50 rounded-2xl p-8 border border-zinc-700 group hover:shadow-xl transition-all duration-300">
          <h3 class="text-2xl font-bold mb-6 text-zinc-100 flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-[#9ECBFF] to-[#79B8FF] rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-zinc-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            {experience.leadership.title}
          </h3>
          <ul class="space-y-3">
            {experience.leadership.items.map((item) => (
              <li class="flex items-start">
                <div class="w-2 h-2 bg-[#9ECBFF] rounded-full mt-2 mr-3 flex-shrink-0"></div>
                <span class="text-zinc-300">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="relative bg-zinc-800/50 rounded-2xl p-8 border border-zinc-700 group hover:shadow-xl transition-all duration-300">
          <h3 class="text-2xl font-bold mb-6 text-zinc-100 flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-[#79B8FF] to-[#9ECBFF] rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-zinc-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            {experience.technical.title}
          </h3>
          <ul class="space-y-3">
            {experience.technical.items.map((item) => (
              <li class="flex items-start">
                <div class="w-2 h-2 bg-[#79B8FF] rounded-full mt-2 mr-3 flex-shrink-0"></div>
                <span class="text-zinc-300">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 6: About Me -->
  <section class="py-20 bg-zinc-900/50">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-3xl md:text-5xl font-bold mb-8 text-center bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
        {about.title}
      </h2>
      
      <div class="relative bg-zinc-800/50 rounded-2xl p-8 md:p-10 border border-zinc-700 overflow-hidden">
        <!-- Decorative circuit pattern -->
        <svg class="absolute top-0 right-0 w-40 h-40 opacity-5" viewBox="0 0 160 160">
          <line x1="20" y1="20" x2="60" y2="20" stroke="currentColor" stroke-width="2" />
          <line x1="60" y1="20" x2="60" y2="60" stroke="currentColor" stroke-width="2" />
          <line x1="60" y1="60" x2="100" y2="60" stroke="currentColor" stroke-width="2" />
          <line x1="100" y1="60" x2="100" y2="40" stroke="currentColor" stroke-width="2" />
          <line x1="100" y1="40" x2="140" y2="40" stroke="currentColor" stroke-width="2" />
          <circle cx="20" cy="20" r="3" fill="currentColor" />
          <circle cx="60" cy="60" r="3" fill="currentColor" />
          <circle cx="100" cy="40" r="3" fill="currentColor" />
          <circle cx="140" cy="40" r="3" fill="currentColor" />
        </svg>
        
        <div class="text-lg text-zinc-300 leading-relaxed whitespace-pre-line mb-8 relative">
          {about.content}
        </div>
        
        <div class="bg-zinc-900/50 rounded-xl p-6 mb-8">
          <div class="grid md:grid-cols-2 gap-4">
            <p class="text-zinc-300 flex items-start gap-3">
              <svg class="w-6 h-6 text-[#9ECBFF] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <strong>{about.location}</strong>
            </p>
            <p class="text-zinc-300 flex items-start gap-3">
              <svg class="w-6 h-6 text-[#79B8FF] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <strong>{about.serving}</strong>
            </p>
          </div>
        </div>
        
        <div class="flex justify-center gap-4">
          <a 
            href={social.linkedin}
            target="_blank"
            class="group flex items-center gap-2 px-5 py-2.5 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-all duration-200"
          >
            Connect on LinkedIn
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
          <a 
            href={social.github}
            target="_blank"
            class="group flex items-center gap-2 px-5 py-2.5 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-all duration-200"
          >
            Check my GitHub
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
          <a 
            href={`mailto:${social.email}`}
            class="group flex items-center gap-2 px-5 py-2.5 bg-zinc-800 rounded-lg hover:bg-zinc-700 transition-all duration-200"
          >
            Send an Email
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 7: Start a Conversation -->
  <section class="py-20 relative overflow-hidden">
    <!-- Animated background gradient -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-r from-[#9ECBFF] via-[#79B8FF] to-[#9ECBFF] opacity-5 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 max-w-4xl relative">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 text-center bg-gradient-to-r from-zinc-100 to-zinc-400 bg-clip-text text-transparent">
        {contact.title}
      </h2>
      <p class="text-xl text-zinc-300 mb-8 text-center">
        {contact.intro}
      </p>
      
      <div class="bg-zinc-800/50 rounded-2xl p-8 mb-10 border border-zinc-700">
        <div class="text-lg text-zinc-300 leading-relaxed whitespace-pre-line">
          {contact.content}
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        <a 
          href={contact.calendlyLink !== '#' ? contact.calendlyLink : `mailto:${contact.email}?subject=Consultation Request`}
          class="group flex items-center justify-center gap-2 px-8 py-4 bg-[#9ECBFF]/20 backdrop-blur-sm border border-[#9ECBFF]/50 text-[#9ECBFF] rounded-lg hover:bg-[#9ECBFF]/30 hover:border-[#9ECBFF] hover:scale-105 transition-all duration-200 ease-in-out font-semibold text-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Schedule a 30-minute Call
        </a>
        <a 
          href={`mailto:${contact.email}`}
          class="group flex items-center justify-center gap-2 px-8 py-4 bg-zinc-800/80 backdrop-blur-sm border border-zinc-700 text-zinc-100 rounded-lg hover:bg-zinc-700/80 hover:border-zinc-600 hover:scale-105 transition-all duration-200 ease-in-out font-semibold text-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Get In Touch
        </a>
      </div>
    </div>
  </section>

  <!-- SECTION 8: Footer -->
  <footer class="bg-black py-12 border-t border-zinc-800">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="text-center">
        <div class="flex justify-center gap-6 mb-6">
          <a href="/blog" class="text-zinc-400 hover:text-white transition-colors hover:underline">Blog</a>
          <a href={social.linkedin} target="_blank" class="text-zinc-400 hover:text-white transition-colors hover:underline">LinkedIn</a>
          <a href={social.github} target="_blank" class="text-zinc-400 hover:text-white transition-colors hover:underline">GitHub</a>
          <a href={`mailto:${social.email}`} class="text-zinc-400 hover:text-white transition-colors hover:underline">Email</a>
        </div>
        <div>
          <p class="text-zinc-500 text-sm">{footer.copyright}</p>
          <div class="mt-2">
            <a href="/privacy" class="text-zinc-500 hover:text-zinc-400 transition-colors text-sm mr-4">Privacy Policy</a>
            <a href="/terms" class="text-zinc-500 hover:text-zinc-400 transition-colors text-sm">Terms of Service</a>
          </div>
        </div>
      </div>
    </div>
  </footer>
</Layout>