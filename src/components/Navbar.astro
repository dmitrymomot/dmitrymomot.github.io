---
const pathname = Astro.url.pathname;
const isHome = pathname === '/';
const isBlog = pathname.startsWith('/blog');
---

<header class="bg-[#16171B]">
  <nav class="max-w-[1440px] mx-auto flex items-center justify-between py-5 px-6 lg:px-[120px]">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-[#22C55E]" style="font-family: 'Space Grotesk', sans-serif; letter-spacing: -1px;">
      dm
    </a>

    <!-- Right side: nav + separator + social -->
    <div class="flex items-center gap-6">
      <!-- Nav links (desktop) -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href="/"
          class:list={[
            "font-mono text-xs uppercase tracking-wider transition-colors",
            isHome ? "text-[#22C55E]" : "text-[#71717A] hover:text-zinc-300"
          ]}
        >
          Home
        </a>
        <a
          href="/blog"
          class:list={[
            "font-mono text-xs uppercase tracking-wider transition-colors",
            isBlog ? "text-[#22C55E]" : "text-[#71717A] hover:text-zinc-300"
          ]}
        >
          Blog
        </a>
      </div>

      <!-- Separator -->
      <span class="hidden md:inline text-[#3F3F46] font-mono text-xs">//</span>

      <!-- Social icons -->
      <div class="flex items-center gap-4">
        <a href="https://github.com/dmitrymomot" target="_blank" class="text-[#71717A] hover:text-zinc-300 transition-colors" aria-label="GitHub">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>
          </svg>
        </a>
        <a href="https://linkedin.com/in/dmitrymomot" target="_blank" class="text-[#71717A] hover:text-zinc-300 transition-colors" aria-label="LinkedIn">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>
          </svg>
        </a>
        <a href="mailto:contact@dmomot.com" class="text-[#71717A] hover:text-zinc-300 transition-colors" aria-label="Email">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <rect x="2" y="4" width="20" height="16" rx="2" />
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>
        </a>
        <a href="https://twitter.com/dmomot" target="_blank" class="text-[#71717A] hover:text-zinc-300 transition-colors" aria-label="Twitter">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        class="md:hidden text-[#71717A] hover:text-zinc-300"
        onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-[#2A2B30]">
    <div class="max-w-[1440px] mx-auto px-6">
      <div class="py-4 space-y-2">
        <a
          href="/"
          class:list={[
            "block py-2 font-mono text-xs uppercase tracking-wider",
            isHome ? "text-[#22C55E]" : "text-[#71717A]"
          ]}
        >
          Home
        </a>
        <a
          href="/blog"
          class:list={[
            "block py-2 font-mono text-xs uppercase tracking-wider",
            isBlog ? "text-[#22C55E]" : "text-[#71717A]"
          ]}
        >
          Blog
        </a>
      </div>
    </div>
  </div>
</header>
